<div class='container' style="padding-top: 20px;">
  <div class='row'>
    <div class='span8'>
      <div class="page-header">
        <h1>
          Edit song
        </h1>
      </div>
      <form action="/songs/<%= @song.id %>" method="post">
      <table class='table table-striped'>
        <tr>
          <td>Title</td>
          <td><input type="text" name="song[title]" value="<%= @song.title %>"></td>
        </tr>
        <tr>
          <td>Artist</td>
          <td><input type="text" name="song[artist]" value="<%= @song.artist %>"></td>
        </tr>
        <tr>
          <td>Album</td>
          <td><input type="text" name="song[album]" value="<%= @song.album %>"></td>
        </tr>
        <tr>
          <td>Genre</td>
          <td><input type="text" name="song[genre]" value="<%= @song.genre %>"></td>
        </tr>
        <tr>
          <td>Length</td>
          <td><input type="text" name="song[length]" value="<%= @song.length %>"></td>
        </tr>
      </table>
      <input type="submit" value="Save Changes">
    </form>
    </div>
  </div>
</div>