<div class='container' style="padding-top: 25px;">
  <div class='row'>
    <div class='span8'>
      <form action=<%= "/songs/#{@song.id}/edited" %> method="POST">
        <table class='table table-striped'>
          <tr>
            <td>Title</td>
            <td><%= @song.title %></td>
            <td><input name="song[title]" value="<%= @song.title %>"</td>
          </tr>
          <tr>
            <td>Artist</td>
            <td><%= @song.artist %></td>
            <td><input name="song[artist]" value="<%= @song.artist %>"></td>
          </tr>
          <tr>
            <td>Album</td>
            <td><%= @song.album %></td>
            <td><input name="song[album]" value="<%= @song.album %>"></td>
          </tr>
          <tr>
            <td>Genre</td>
            <td><%= @song.genre %></td>
            <td><input name="song[genre]" value="<%= @song.genre %>"></td>     
          </tr>
          <tr>
            <td>Length</td>
            <td><%= @song.length %></td>
            <td><input name="song[length]" value="<%= @song.length %>"></td>
          </tr>
        </table>
        <input type="submit" value="Save Changes" />
      </form>
    </div>
  </div>
</div>
